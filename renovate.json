{
  "constraints": {
    "npm": "> 8.0.0"
  },
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": ["**/node_modules/**", "**/test/**"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "@types/faker",
        "faker"
      ],
      "allowedVersions": "< 6.0.0"
    },
    {
      "automerge": false,
      "groupName": "react monorepo",
      "labels": ["enhancement"],
      "sourceUrlPrefixes": ["https://github.com/facebook/react"],
      "updateTypes": ["major", "minor"]
    },
    {
      "matchPackageNames": [
        "@rollup/plugin-terser"
      ],
      "allowedVersions": "0.1.0"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
